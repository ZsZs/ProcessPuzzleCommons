	<target name="domaintier-build">
		<ant dir="${project.root}" antfile="${common.build.path}/${common.domaintier.build.file}">
			<property name="cobertura.data.file" value="${project.root}/${cobertura.data.file}" />
		</ant>
	</target>
</project>